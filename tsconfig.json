{
  "include": ["client/src/**/*", "shared/**/*", "server/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "**/*.test.ts"
  ],
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.tsbuildinfo",

    "noEmit": false,                      
    "outDir": "./dist",                    
    "rootDir": ".",                       

    "module": "ESNext",
    "target": "ES2020",
    "jsx": "preserve",
    "moduleResolution": "bundler",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "allowImportingTsExtensions": false,

    "lib": ["esnext", "dom", "dom.iterable"],

    "baseUrl": ".",
    "types": ["node", "vite/client"],

    "paths": {
      "@/*": ["./client/src/*"],
      "@shared/*": ["./shared/*"]
    }
  }
}
